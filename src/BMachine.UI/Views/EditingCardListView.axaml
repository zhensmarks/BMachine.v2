<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BMachine.UI.ViewModels"
             xmlns:models="using:BMachine.UI.Models"
             xmlns:controls="using:BMachine.UI.Controls"
             xmlns:views="using:BMachine.UI.Views"
             x:Class="BMachine.UI.Views.EditingCardListView"
             x:DataType="vm:EditingCardListViewModel"
             Background="{DynamicResource AppBackgroundBrush}">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid x:Name="Part_RootGrid" Background="{DynamicResource AppBackgroundBrush}" SizeChanged="OnRootGridSizeChanged">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid x:Name="Part_MainContent" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="30" Spacing="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Editing" FontWeight="Bold" FontSize="24" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                            <!-- Status Dot -->
                            <Ellipse Width="10" Height="10" VerticalAlignment="Center" ToolTip.Tip="{Binding ConnectionStatusText, StringFormat='{}Status: {0}'}">
                                <Ellipse.Styles>
                                    <Style Selector="Ellipse">
                                        <Setter Property="Fill" Value="#EF4444"/> <!-- Red (Offline) -->
                                    </Style>
                                    <Style Selector="Ellipse.online">
                                        <Setter Property="Fill" Value="#22C55E"/> <!-- Green (Online) -->
                                    </Style>
                                </Ellipse.Styles>
                                <Classes.online>
                                    <Binding Path="IsOnline"/>
                                </Classes.online>
                            </Ellipse>
                            <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                         <!-- Manual Add Button -->
                         <Button Command="{Binding OpenAddManualPanelCommand}"
                                 Classes="Primary" Padding="12,8" CornerRadius="6" Cursor="Hand">
                             <TextBlock Text="Manual"/>
                         </Button>

                         <!-- Batch Move Button -->
                         <Button Command="{Binding ShowBatchMovePanelCommand}"
                                 IsVisible="{Binding HasSelectedCards}"
                                 Classes="Primary" Padding="12,8" CornerRadius="6" Cursor="Hand">
                             <StackPanel Orientation="Horizontal" Spacing="6">
                                 <PathIcon Data="{StaticResource IconArrowRight}" Width="16" Height="16"/>
                                 <TextBlock Text="Move Batch"/>
                             </StackPanel>
                         </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
            <!-- Cards List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Cards}" Margin="10,0,10,20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:TrelloCard">
                                <Button Command="{Binding $parent[UserControl].DataContext.SelectCardCommand}" 
                                        CommandParameter="{Binding}"
                                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                        Padding="0" BorderThickness="0" Background="Transparent"
                                        Margin="0,0,0,4" CornerRadius="6">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </Button.Styles>
                                    
                                    <Border ClipToBounds="True" CornerRadius="6" 
                                            BorderThickness="1"
                                            Classes.selected="{Binding IsActive}">
                                        <Border.Styles>
                                            <Style Selector="Border.selected">
                                                <Setter Property="Background" Value="{DynamicResource AccentEditingLowOpacityBrush}"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="BoxShadow" Value="0 0 0 0 Transparent"/>
                                            </Style>
                                            <Style Selector="Border">
                                                <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                                <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
                                            </Style>
                                        </Border.Styles>
                                        
                                        <Grid ColumnDefinitions="4, Auto, *, Auto, Auto" MinHeight="50">
                                            <!-- Accent Line (Left) -->
                                            <Border Grid.Column="0" Background="{DynamicResource AccentEditingBrush}" 
                                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                    IsVisible="{Binding !IsActive}"/>
                                            
                                            <!-- Checkbox -->
                                            <CheckBox Grid.Column="1" IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      Margin="10,0,0,0" VerticalAlignment="Center"
                                                      Command="{Binding $parent[UserControl].DataContext.SelectionChangedCommand}"/>
                                            
                                            <!-- Name & URL -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,6" Spacing="2">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold" FontSize="14" 
                                                           Foreground="{DynamicResource TextPrimaryBrush}" 
                                                           TextTrimming="CharacterEllipsis"/>
                                                
                                                <!-- Manual Card URL -->
                                                <TextBlock Text="{Binding Url}" 
                                                           IsVisible="{Binding IsManual}"
                                                           FontSize="11" Foreground="{DynamicResource AccentEditingBrush}" 
                                                           TextTrimming="CharacterEllipsis" Opacity="0.8"/>
                                            </StackPanel>
                                            
                                            <!-- Checklist Status Badge -->
                                            <Border Grid.Column="3" CornerRadius="4" Padding="6,2" Margin="0,0,10,0" VerticalAlignment="Center"
                                                    IsVisible="{Binding HasChecklist}"
                                                    ToolTip.Tip="{Binding ChecklistTooltip}">
                                                <Border.Styles>
                                                    <Style Selector="Border">
                                                        <Setter Property="Background" Value="#26FFFFFF"/> <!-- Default Gray (Like Attachment) -->
                                                    </Style>
                                                    <Style Selector="Border.valid">
                                                        <Setter Property="Background" Value="#2622C55E"/> <!-- Green (Valid Format) -->
                                                    </Style>
                                                </Border.Styles>
                                                <Classes.valid>
                                                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                        <Binding Path="HasEditingChecklist"/>
                                                    </MultiBinding>
                                                </Classes.valid>
                                                
                                                 <PathIcon Width="10" Height="10">
                                                     <PathIcon.Styles>
                                                         <Style Selector="PathIcon">
                                                             <Setter Property="Data" Value="{StaticResource IconSquare}"/>
                                                             <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                                         </Style>
                                                         <Style Selector="Border.valid PathIcon">
                                                             <Setter Property="Data" Value="{StaticResource IconCheckSquare}"/>
                                                             <Setter Property="Foreground" Value="#22C55E"/>
                                                         </Style>
                                                     </PathIcon.Styles>
                                                 </PathIcon>
                                            </Border>

                                            <!-- Attachment Badge -->
                                            <Border Grid.Column="4" Background="#26FFFFFF" CornerRadius="4" Padding="6,2" Margin="0,0,10,0"
                                                    IsVisible="{Binding HasAttachments}" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <PathIcon Data="{StaticResource IconPaperclip}" Width="10" Height="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding AttachmentCount}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
            </ScrollViewer>

            <!-- FAB Refresh Button (kanan bawah) -->
            <Button Command="{Binding RefreshCommand}" Grid.Row="1"
                    Width="48" Height="48" CornerRadius="24"
                    Background="{DynamicResource AccentBlueBrush}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,30,30" Cursor="Hand"
                    IsVisible="{Binding !IsRefreshing}">
                <PathIcon Data="{StaticResource IconRefresh}" 
                          Width="20" Height="20" Foreground="White"/>
            </Button>
            
            <!-- Loading Indicator for Manual Refresh -->
            <Border Grid.Row="1" Width="48" Height="48" CornerRadius="24"
                    Background="{DynamicResource AccentBlueBrush}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    BoxShadow="0 4 8 0 #40000000"
                    Margin="0,0,30,30" 
                    IsVisible="{Binding IsRefreshing}">
                 <ProgressBar IsIndeterminate="True" Width="26" Height="26" Foreground="White" Theme="{DynamicResource ProgressRing}"/>
            </Border>
        </Grid>

        <!-- Side Panel: Card Details -->
        <Border x:Name="Part_DetailPanel" Grid.Column="1" Width="400" Background="{DynamicResource BackgroundDarkBrush}" 
                BorderBrush="{DynamicResource TextSecondaryBrush}" BorderThickness="1,0,0,0"
                IsVisible="{Binding IsDetailPanelOpen}">
             <Grid RowDefinitions="Auto, Auto, Auto, *" Margin="20">
                 
                 <!-- 1. Header & Close -->
                 <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,15">
                     <!-- Offline Banner -->
                     <Border Grid.Column="0" Grid.ColumnSpan="2" Background="#EF4444" Margin="-20,-20,-20,15" Padding="10" IsVisible="{Binding !IsOnline}">
                         <TextBlock Text="OFFLINE - READ ONLY" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                     </Border>
                     
                     <TextBlock Grid.Column="0" Text="Card Details" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Bottom"/>
                     <Button Grid.Column="1" Command="{Binding CloseDetailPanelCommand}" Content="✕" 
                             Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" Cursor="Hand" VerticalAlignment="Bottom"/>
                 </Grid>
                 
                 <!-- 2. Action Buttons (Top) -->
                 <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,20">
                     <Button Command="{Binding ShowCommentsCommand}" CommandParameter="{Binding SelectedCard}"
                             Classes="Primary" CornerRadius="6" Padding="12,8" Cursor="Hand">
                         <StackPanel Orientation="Horizontal" Spacing="6">
                             <PathIcon Data="{StaticResource IconMessageSquare}" Width="16" Height="16"/>
                             <TextBlock Text="Comment"/>
                         </StackPanel>
                     </Button>
                     <Button Command="{Binding ShowChecklistsCommand}" CommandParameter="{Binding SelectedCard}"
                             Classes="Primary" CornerRadius="6" Padding="12,8" Cursor="Hand">
                         <StackPanel Orientation="Horizontal" Spacing="6">
                             <PathIcon Data="{StaticResource IconCheckSquare}" Width="16" Height="16"/>
                             <TextBlock Text="Checklist"/>
                         </StackPanel>
                     </Button>
                     
                     <!-- Move (Regular) -->
                     <Button Command="{Binding StartMoveCardCommand}" CommandParameter="{Binding SelectedCard}"
                             Classes="Primary" CornerRadius="6" Padding="12,8" Cursor="Hand"
                             IsEnabled="{Binding IsOnline}"
                             IsVisible="{Binding !SelectedCard.IsManual}">
                         <StackPanel Orientation="Horizontal" Spacing="6">
                             <PathIcon Data="{StaticResource IconArrowRight}" Width="16" Height="16"/>
                             <TextBlock Text="Move"/>
                         </StackPanel>
                     </Button>

                     <!-- Unlink (Manual) -->
                     <Button Command="{Binding RemoveManualCardCommand}" CommandParameter="{Binding SelectedCard}"
                             IsVisible="{Binding SelectedCard.IsManual}"
                             Classes="Clear" Background="#26EF4444" CornerRadius="6" Padding="12,8" Cursor="Hand">
                         <StackPanel Orientation="Horizontal" Spacing="6">
                             <PathIcon Data="{StaticResource IconTrash}" Width="14" Height="14" Foreground="#FF6666"/>
                             <TextBlock Text="Unlink" Foreground="#FF6666"/>
                         </StackPanel>
                     </Button>
                 </StackPanel>
                 
                 <!-- 3. Scrollable Content -->
                 <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                     <StackPanel Spacing="15">
                         
                         <!-- Title & ID -->
                         <StackPanel Spacing="8">
                             <TextBlock Text="{Binding SelectedCard.Name}" FontWeight="Bold" FontSize="18" TextWrapping="Wrap" Foreground="{DynamicResource TextPrimaryBrush}"/>
                             
                             <Button Classes="Clear" Padding="0" Background="Transparent" HorizontalAlignment="Left"
                                   Command="{Binding CopyIdCommand}"
                                   CommandParameter="{Binding SelectedCard.DisplayId}"
                                   IsVisible="{Binding SelectedCard.HasDisplayId}"
                                   Cursor="Hand" ToolTip.Tip="Click to Copy ID">
                                  <Border Background="{DynamicResource AccentEditingBrush}" CornerRadius="4" Padding="8,4">
                                      <StackPanel Orientation="Horizontal" Spacing="4">
                                          <TextBlock Text="ID:" FontSize="10" FontWeight="Bold" Foreground="White" Opacity="0.8"/>
                                          <TextBlock Text="{Binding SelectedCard.DisplayId}" FontSize="11" FontWeight="Bold" Foreground="White"/>
                                      </StackPanel>
                                  </Border>
                             </Button>
                         </StackPanel>
                         
                         <Border Height="1" Background="#FFFFFF" Opacity="0.1" Margin="0,5"/>
                         
                         <!-- Description -->
                         <StackPanel Spacing="6">
                             <TextBlock Text="Description" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                              <TextBox Text="{Binding SelectedCard.Description}" 
                                      IsReadOnly="True" TextWrapping="Wrap"
                                      Background="Transparent" BorderThickness="0" 
                                      Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14" Padding="0"/>
                         </StackPanel>
                         
                         <!-- Due Date & Labels -->
                         <Grid ColumnDefinitions="*, *" Margin="0,10,0,0">
                             <StackPanel Grid.Column="0" Spacing="6">
                                  <TextBlock Text="Due Date" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                                  <StackPanel Orientation="Horizontal" Spacing="6">
                                      <PathIcon Data="{StaticResource IconClock}" Width="14" Height="14" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                      <TextBlock Text="{Binding SelectedCard.DueDateText}" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                  </StackPanel>
                             </StackPanel>
                             
                             <StackPanel Grid.Column="1" Spacing="6" IsVisible="{Binding SelectedCard.LabelsText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                  <TextBlock Text="Labels" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                                  <Border Background="#2600FF00" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" IsVisible="{Binding SelectedCard.LabelsText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                      <TextBlock Text="{Binding SelectedCard.LabelsText}" Foreground="#4ade80" FontWeight="SemiBold" FontSize="12"/>
                                  </Border>
                             </StackPanel>
                         </Grid>
                         
                         <Border Height="1" Background="#FFFFFF" Opacity="0.1" Margin="0,5"/>
                         
                         <!-- Attachments Preview (Mini) -->
                         <StackPanel Spacing="10" IsVisible="{Binding SelectedCard.HasAttachments}"> 
                              <Grid ColumnDefinitions="*, Auto">
                                  <TextBlock Text="Attachments" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                                  <Button Content="View All" Command="{Binding ShowAttachmentsCommand}" CommandParameter="{Binding SelectedCard}"
                                          Classes="Primary" FontSize="11" Margin="0" Padding="8,4"/>
                              </Grid>
                              
                              <ItemsControl ItemsSource="{Binding Attachments}">
                                  <ItemsControl.ItemsPanel>
                                      <ItemsPanelTemplate>
                                          <WrapPanel ItemWidth="80" ItemHeight="80"/>
                                      </ItemsPanelTemplate>
                                  </ItemsControl.ItemsPanel>
                                  <ItemsControl.ItemTemplate>
                                      <DataTemplate>
                                          <Border Margin="4" CornerRadius="6" ClipToBounds="True" Background="#33FFFFFF">
                                              <Image Source="{Binding Thumbnail}" Stretch="UniformToFill"/>
                                          </Border>
                                      </DataTemplate>
                                  </ItemsControl.ItemTemplate>
                              </ItemsControl>
                         </StackPanel>

                     </StackPanel>
                 </ScrollViewer>
             </Grid>
        </Border>

        <!-- Side Panel: Add Manual Card -->
        <Border x:Name="Part_AddManualPanel" Grid.Column="1" Width="400" Background="{DynamicResource AppBackgroundBrush}" 
                BorderBrush="{DynamicResource TextSecondaryBrush}" BorderThickness="1,0,0,0"
                IsVisible="{Binding IsAddManualPanelOpen}">
            <Grid RowDefinitions="Auto, *, Auto" Margin="25">
                <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,20">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Add Manual Card" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Paste your Trello links below" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <Button Grid.Column="1" Command="{Binding CloseAddManualPanelCommand}" Content="✕" 
                            Background="Transparent" BorderThickness="0" FontSize="18" Foreground="{DynamicResource TextSecondaryBrush}" Cursor="Hand"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1">
                        <TextBox Text="{Binding ManualCardLinkInput}" AcceptsReturn="True" 
                                 Watermark="https://trello.com/c/..."
                                 Background="Transparent" BorderThickness="0" 
                                 Padding="20" FontSize="14"
                                 TextWrapping="Wrap"
                                 VerticalContentAlignment="Top"
                                 VerticalAlignment="Top"
                                 Height="150"
                                 SelectionBrush="{DynamicResource AccentBlueBrush}"/>
                    </Border>
                </Grid>

                <Button Grid.Row="2" Command="{Binding ConfirmAddManualCardCommand}" 
                        Content="ADD CARDS"
                        Background="{DynamicResource AccentBlueBrush}" Foreground="White"
                        IsEnabled="{Binding !IsLoadingManualAdd}"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                        CornerRadius="10" Padding="15,12" Margin="0,25,0,0"
                        FontWeight="SemiBold" FontSize="14" Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Side Panel: Comments -->
        <Border x:Name="Part_CommentPanel" Grid.Column="1" Width="350" Background="{DynamicResource AppBackgroundBrush}" 
                BorderBrush="{DynamicResource TextSecondaryBrush}" BorderThickness="1,0,0,0"
                IsVisible="{Binding IsCommentPanelOpen}">
            <Grid RowDefinitions="Auto, *, Auto" Margin="20">
                <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,20">
                    <StackPanel Spacing="5">
                         <TextBlock Text="Comments" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                         <TextBlock Text="{Binding SelectedCard.Name}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                    </StackPanel>
                    <Button Grid.Column="1" Command="{Binding CloseCommentsPanelCommand}" Content="✕" 
                            Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" Cursor="Hand"/>
                </Grid>

                <ScrollViewer Grid.Row="1">
                    <StackPanel Spacing="15">
                        <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoadingComments}" Margin="0,20"/>
                        <TextBlock Text="No comments yet." IsVisible="{Binding !Comments.Count}" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" FontStyle="Italic" HorizontalAlignment="Center"/>
                        
                        <ItemsControl ItemsSource="{Binding Comments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#10FFFFFF" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                                        <Grid ColumnDefinitions="Auto, *">
                                            <Border Width="32" Height="32" CornerRadius="16" Background="{DynamicResource AccentColorBrush}" Margin="0,0,12,0" VerticalAlignment="Top" ClipToBounds="True">
                                                <Panel>
                                                    <TextBlock Text="{Binding MemberCreatorInitials}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="12"/>
                                                </Panel>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1" Spacing="4">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding MemberCreatorName}" FontWeight="Bold" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Date, StringFormat='{}{0:dd MMM HH:mm}'}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <controls:FormattedTextBlock Text="{Binding Text}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <Grid Grid.Row="2" ColumnDefinitions="*, Auto" Margin="0,20,0,0">
                    <TextBox Text="{Binding NewCommentText}" Watermark="Write a comment..." 
                             Background="#1AFFFFFF" BorderThickness="0" CornerRadius="8" Padding="10"
                             Margin="0,0,10,0" AcceptsReturn="True" TextWrapping="Wrap" MaxHeight="100">
                        <TextBox.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding SendCommentCommand}"/>
                        </TextBox.KeyBindings>
                    </TextBox>
                    <Button Grid.Column="1" Command="{Binding SendCommentCommand}" 
                            Width="40" Height="40" CornerRadius="20" Background="{DynamicResource AccentColorBrush}" Cursor="Hand" ToolTip.Tip="Send Comment">
                        <PathIcon Data="{StaticResource IconSend}" Foreground="White" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Side Panel: Checklist -->
        <Border x:Name="Part_ChecklistPanel" Grid.Column="1" Width="400" Background="{DynamicResource AppBackgroundBrush}" 
                BorderBrush="{DynamicResource TextSecondaryBrush}" BorderThickness="1,0,0,0"
                IsVisible="{Binding IsChecklistPanelOpen}">
            <Grid RowDefinitions="Auto, *, Auto" Margin="20">
                <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,20">
                    <StackPanel Spacing="5">
                         <TextBlock Text="Checklists" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                         <TextBlock Text="{Binding SelectedCard.Name}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                    </StackPanel>
                    <Button Grid.Column="1" Command="{Binding CloseChecklistPanelCommand}" Content="✕" 
                            Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" Cursor="Hand"/>
                </Grid>

                <ScrollViewer Grid.Row="1">
                    <StackPanel Spacing="20">
                        <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoadingChecklists}" Margin="0,20"/>
                        <TextBlock Text="No checklists found." IsVisible="{Binding !Checklists.Count}" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" FontStyle="Italic" HorizontalAlignment="Center"/>
                        
                        <ItemsControl ItemsSource="{Binding Checklists}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="10" Margin="0,0,0,20">
                                        <Grid ColumnDefinitions="Auto, *, Auto">
                                            <PathIcon Data="{StaticResource IconCheckSquare}" 
                                                  Foreground="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                            
                                            <Button Grid.Column="2" 
                                                    Command="{Binding $parent[UserControl].DataContext.DeleteChecklistCommand}" 
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" BorderThickness="0" Padding="8,4" Cursor="Hand" ToolTip.Tip="Delete Checklist">
                                                <PathIcon Data="{StaticResource IconTrash}" Width="14" Height="14" Foreground="#ef4444"/>
                                            </Button>
                                        </Grid>
                                        
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" 
                                                              Content="{Binding Name}" Margin="5,2"
                                                              Command="{Binding $parent[UserControl].DataContext.ToggleCheckItemCommand}"
                                                              CommandParameter="{Binding}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
                
                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                     <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="1" CornerRadius="8" Padding="15" IsVisible="{Binding IsDuplicateMode}" Margin="0,0,0,10">
                         <StackPanel Spacing="10">
                             <TextBlock Text="Duplicate Checklist" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                             <StackPanel Spacing="5">
                                  <TextBlock Text="New Name:" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                  <TextBox Text="{Binding DuplicateChecklistName}" Watermark="#EDITING USER_PROFILE" IsReadOnly="True"/>
                             </StackPanel>
                             <StackPanel Spacing="5">
                                  <TextBlock Text="Source:" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                  <AutoCompleteBox ItemsSource="{Binding Checklists}" 
                                                   SelectedItem="{Binding SelectedSourceChecklist}" 
                                                   ValueMemberBinding="{Binding Name}"
                                                   Watermark="Select source..." 
                                                   HorizontalAlignment="Stretch"
                                                   FilterMode="Contains"
                                                   MinimumPrefixLength="0"
                                                   GotFocus="AutoCompleteBox_GotFocus"
                                                   MaxDropDownHeight="160"/>
                             </StackPanel>
                             <Grid ColumnDefinitions="*, *" Margin="0,5,0,0">
                                 <Button Grid.Column="0" Content="Cancel" Command="{Binding ToggleDuplicateModeCommand}" 
                                         Background="Transparent" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Left"/>
                                 <Button Grid.Column="1" Content="Create Copy" Command="{Binding DuplicateChecklistCommand}" 
                                         Background="{DynamicResource AccentBlueBrush}" Foreground="White" HorizontalAlignment="Right"/>
                             </Grid>
                         </StackPanel>
                     </Border>
                     <Button Command="{Binding ToggleDuplicateModeCommand}"
                             IsVisible="{Binding !IsDuplicateMode}"
                             IsEnabled="{Binding IsOnline}"
                             Classes="Primary" HorizontalAlignment="Center" FontSize="12" Cursor="Hand">
                         <StackPanel Orientation="Horizontal" Spacing="6">
                             <PathIcon Data="{StaticResource IconPlus}" Width="12" Height="12"/>
                             <TextBlock Text="Duplicate Checklist"/>
                         </StackPanel>
                     </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Side Panel: Move Card -->
        <Border x:Name="Part_MovePanel" Grid.Column="1" Width="400" Background="{DynamicResource AppBackgroundBrush}" 
                BorderBrush="{DynamicResource TextSecondaryBrush}" BorderThickness="1,0,0,0"
                IsVisible="{Binding IsMovePanelOpen}">
            <Grid RowDefinitions="Auto, *, Auto" Margin="20">
                <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,20">
                    <StackPanel Spacing="5">
                         <TextBlock Text="Move Card" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                         <TextBlock Text="{Binding SelectedCard.Name}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                    </StackPanel>
                    <Button Grid.Column="1" Command="{Binding CloseMovePanelCommand}" Content="✕" 
                            Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" Cursor="Hand"/>
                </Grid>

                <StackPanel Grid.Row="1" Spacing="20">
                    <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoadingMoveData}" Margin="0,0,0,10"/>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="Choose Board" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <AutoCompleteBox ItemsSource="{Binding AvailableBoards}" 
                                         SelectedItem="{Binding SelectedMoveBoard}" 
                                         ValueMemberBinding="{Binding Name}"
                                         Watermark="Search board..." 
                                         HorizontalAlignment="Stretch"
                                         FilterMode="Contains"
                                         MinimumPrefixLength="0"
                                         GotFocus="AutoCompleteBox_GotFocus"
                                         MaxDropDownHeight="160"/>
                    </StackPanel>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="Select List" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <AutoCompleteBox ItemsSource="{Binding AvailableLists}" 
                                         SelectedItem="{Binding SelectedMoveList}" 
                                         ValueMemberBinding="{Binding Name}"
                                         Watermark="Search list..." 
                                         HorizontalAlignment="Stretch"
                                         FilterMode="Contains"
                                         MinimumPrefixLength="0"
                                         IsEnabled="{Binding SelectedMoveBoard, Converter={x:Static ObjectConverters.IsNotNull}}"
                                         GotFocus="AutoCompleteBox_GotFocus"
                                         MaxDropDownHeight="160"/>
                    </StackPanel>
                    
                    <Button Command="{Binding MoveCardCommand}" 
                            HorizontalAlignment="Stretch"
                            Background="{DynamicResource AccentBlueBrush}" Foreground="White"
                            Padding="15,10" CornerRadius="8" Margin="0,20,0,0"
                            IsEnabled="{Binding SelectedMoveList, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                             <TextBlock Text="Confirm Move" FontWeight="Bold"/>
                             <PathIcon Data="{StaticResource IconArrowRight}" Foreground="White" Width="12" Height="12"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Side Panel: Attachments -->
        <Border x:Name="Part_AttachmentPanel" Grid.Column="1" Width="400" Background="{DynamicResource AppBackgroundBrush}" 
                BorderBrush="{DynamicResource TextSecondaryBrush}" BorderThickness="1,0,0,0"
                IsVisible="{Binding IsAttachmentPanelOpen}">
            <Grid RowDefinitions="Auto, *, Auto" Margin="20">
                <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,20">
                    <StackPanel Spacing="5">
                         <TextBlock Text="Attachments" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                         <TextBlock Text="{Binding SelectedCard.Name}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                    </StackPanel>
                    <Button Grid.Column="1" Command="{Binding CloseAttachmentPanelCommand}" Content="✕" 
                            Background="Transparent" BorderThickness="0" FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" Cursor="Hand"/>
                </Grid>

                <ScrollViewer Grid.Row="1">
                    <StackPanel Spacing="20">
                        <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoadingAttachments}" Margin="0,20"/>
                        <TextBlock Text="No attachments." IsVisible="{Binding !Attachments.Count}" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" FontStyle="Italic" HorizontalAlignment="Center"/>
                        
                        <ItemsControl ItemsSource="{Binding Attachments}">
                             <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="160" ItemHeight="160"/>
                                </ItemsPanelTemplate>
                             </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="5" Background="#1AFFFFFF" CornerRadius="8" ClipToBounds="True">
                                        <Grid RowDefinitions="*, Auto">
                                            <!-- Preview: Clickable to Open -->
                                            <Button Grid.Row="0" Command="{Binding $parent[UserControl].DataContext.OpenAttachmentCommand}" CommandParameter="{Binding}"
                                                    Background="Transparent" BorderThickness="0" Padding="0" Margin="0">
                                                <Panel>
                                                    <Image Source="{Binding Thumbnail}" IsVisible="{Binding IsImage}" Stretch="UniformToFill"/>
                                                    <PathIcon IsVisible="{Binding !IsImage}" Data="{StaticResource IconFile}" 
                                                          Foreground="{DynamicResource TextSecondaryBrush}" Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                                                </Panel>
                                            </Button>
                                            
                                            <!-- Download Overlay (Top Right) -->
                                            <Button Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Background="#AA000000" CornerRadius="4" Margin="5" Padding="4"
                                                    Command="{Binding $parent[UserControl].DataContext.DownloadAttachmentCommand}" CommandParameter="{Binding}"
                                                    ToolTip.Tip="Download File">
                                                 <PathIcon Data="{StaticResource IconDownload}" Foreground="White" Width="12" Height="12"/>
                                            </Button> 
                                            
                                            <!-- Download Progress Overlay -->
                                            <Grid Grid.Row="0" Background="#66000000" IsVisible="{Binding IsDownloading}">
                                                 <ProgressBar IsIndeterminate="True" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Grid>

                                            <!-- Metadata -->
                                            <Border Grid.Row="1" Background="#CC000000" Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="11" TextTrimming="CharacterEllipsis" ToolTip.Tip="{Binding Name}"/>
                                                    <TextBlock Text="{Binding Bytes}" Foreground="#BBB" FontSize="9"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
