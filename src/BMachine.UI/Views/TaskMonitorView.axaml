<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BMachine.UI.ViewModels"
             xmlns:svc="using:BMachine.UI.Services"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="280"
             x:Class="BMachine.UI.Views.TaskMonitorView">

    <UserControl.Resources>
        <!-- Retry/Refresh icon -->
        <StreamGeometry x:Key="IconRetry">M23 4v6h-6 M1 20v-6h6 M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15</StreamGeometry>
        <StreamGeometry x:Key="IconX">M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z</StreamGeometry>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="ProgressBar">
            <Setter Property="Foreground" Value="{DynamicResource AccentBlueBrush}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </UserControl.Styles>

    <Border Background="{DynamicResource CardBackgroundBrush}"
            BorderBrush="{DynamicResource SeparatorBrush}"
            BorderThickness="0,1,0,0"
            Padding="0">

        <Grid RowDefinitions="Auto, *, Auto">

            <!-- Header: File Operations (N) + Dropdown + Close -->
            <Border Grid.Row="0" Padding="10,8" Background="{DynamicResource AppBackgroundBrush}"
                    BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="0,0,0,1"
                    PointerPressed="OnHeaderPointerPressed">
                <Grid ColumnDefinitions="Auto, *, Auto, Auto">
                    <TextBlock Grid.Column="0" Text="File Operations" VerticalAlignment="Center"
                               FontWeight="SemiBold" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding ActiveTasks.Count, StringFormat='({0})'}"
                               VerticalAlignment="Center" FontSize="13" Margin="4,0,0,0"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>

                    <Button Grid.Column="2" Classes="IconBtn" Margin="4,0" Click="OnToggleClick"
                            ToolTip.Tip="Expand / Collapse"
                            VerticalAlignment="Center">
                        <Panel>
                            <PathIcon Data="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
                                      Width="12" Height="12" Foreground="{DynamicResource TextSecondaryBrush}"
                                      IsVisible="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            <PathIcon Data="M7.41,15.41L12,10.83L16.59,15.41L18,14L12,8L6,14L7.41,15.41Z"
                                      Width="12" Height="12" Foreground="{DynamicResource TextSecondaryBrush}"
                                      IsVisible="{Binding !IsExpanded, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </Panel>
                    </Button>
                    <Button Grid.Column="3" Classes="IconBtn" Margin="0" Click="OnCloseClick"
                            ToolTip.Tip="Close" VerticalAlignment="Center">
                        <PathIcon Data="{StaticResource IconX}" Width="12" Height="12"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Task List (TeraCopy-style: Running / Completed / Failed) -->
            <ScrollViewer Grid.Row="1" MaxHeight="240" VerticalScrollBarVisibility="Auto"
                          IsVisible="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <ItemsControl ItemsSource="{Binding ActiveTasks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="svc:FileTaskItem">
                            <Border Padding="12,10" BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="0,0,0,1">
                                <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto, Auto">

                                    <!-- Row 0: Name -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}"
                                               FontSize="12" FontWeight="Medium" TextTrimming="CharacterEllipsis"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>

                                    <!-- Row 0 right: Status label + action button -->
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="6"
                                                VerticalAlignment="Center" Margin="8,0,0,0">
                                        <!-- Running -->
                                        <TextBlock Text="Running..." FontSize="11" VerticalAlignment="Center"
                                                   Foreground="{DynamicResource AccentBlueBrush}"
                                                   IsVisible="{Binding IsRunning}"/>
                                        <!-- Completed -->
                                        <TextBlock Text="Completed" FontSize="11" VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TerminalSuccessBrush}"
                                                   IsVisible="{Binding IsCompleted}"/>
                                        <!-- Failed -->
                                        <TextBlock Text="Failed" FontSize="11" VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TerminalErrorBrush}"
                                                   IsVisible="{Binding IsFailed}"/>
                                        <!-- Cancelled -->
                                        <TextBlock Text="Cancelled" FontSize="11" VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   IsVisible="{Binding IsCancelled}"/>
                                    </StackPanel>
                                    <Button Grid.Row="0" Grid.Column="2" Classes="IconBtn" VerticalAlignment="Center"
                                            Command="{Binding $parent[UserControl].DataContext.CancelTaskCommand}"
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding IsRunning}">
                                        <PathIcon Data="{StaticResource IconX}" Width="12" Height="12"
                                                  Foreground="{DynamicResource TerminalErrorBrush}"/>
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="2" Classes="IconBtn" VerticalAlignment="Center"
                                            Command="{Binding $parent[UserControl].DataContext.RemoveTaskCommand}"
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding IsCompleted}">
                                        <PathIcon Data="{StaticResource IconX}" Width="12" Height="12"
                                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="2" Classes="IconBtn" VerticalAlignment="Center"
                                            Command="{Binding $parent[UserControl].DataContext.RetryTaskCommand}"
                                            CommandParameter="{Binding}"
                                            ToolTip.Tip="Retry"
                                            IsVisible="{Binding IsFailed}">
                                        <PathIcon Data="{StaticResource IconRetry}" Width="12" Height="12"
                                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </Button>

                                    <!-- Row 1: Progress bar (running) / From path (completed) / Error (failed) -->
                                    <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Value="{Binding Progress}" Maximum="100" Margin="0,6,0,0"
                                                 IsVisible="{Binding IsRunning}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,4,0,0"
                                               Text="{Binding SourceFolderDisplay, StringFormat='From: {0}'}"
                                               FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                                               IsVisible="{Binding IsCompleted}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,4,0,0"
                                               Text="{Binding ErrorMessage}" FontSize="11"
                                               Foreground="{DynamicResource TerminalErrorBrush}"
                                               TextWrapping="Wrap" TextTrimming="CharacterEllipsis"
                                               IsVisible="{Binding IsFailed}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer: Clear All Completed -->
            <Border Grid.Row="2" Padding="10,8" Background="{DynamicResource AppBackgroundBrush}"
                    BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="0,1,0,0">
                <Button HorizontalAlignment="Right" Content="Clear All Completed"
                        Command="{Binding ClearCompletedCommand}"
                        Classes="Secondary" FontSize="11" Padding="10,4"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
