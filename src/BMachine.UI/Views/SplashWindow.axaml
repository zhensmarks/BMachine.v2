<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BMachine.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="350"
        x:Class="BMachine.UI.Views.SplashWindow"
        x:DataType="vm:SplashViewModel"
        Width="600" Height="350"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        Topmost="True">

    <Border CornerRadius="12" ClipToBounds="True">
        <Grid>
            <!-- 1. Background: New Image -->
            <Grid.Background>
                <ImageBrush Source="avares://BMachine.UI/Assets/splash_bg.png" Stretch="UniformToFill"/>
            </Grid.Background>
            
            <!-- Dark Overlay to ensure readability -->
            <Border Background="#40000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            
            <!-- 2. Content Container -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="25">
                
                <!-- NEW LOGO IMAGE -->
                <Image Source="avares://BMachine.UI/Assets/splash_logo.png" 
                       Width="300" 
                       HorizontalAlignment="Center"
                       RenderOptions.BitmapInterpolationMode="HighQuality">
                     <Image.Effect>
                         <DropShadowEffect Color="#3b82f6" BlurRadius="30" Opacity="0.25"/>
                     </Image.Effect>
                </Image>
                    
                <!-- Version -->
                <TextBlock Text="v2.0" 
                           FontSize="14" 
                           FontWeight="Normal" 
                           HorizontalAlignment="Center" 
                           Foreground="#64748B" 
                           LetterSpacing="1"
                           Margin="0,-10,0,0"/>
            </StackPanel>

            <!-- 3. Footer: Progress Bar & Status -->
            <StackPanel VerticalAlignment="Bottom" Margin="60,0,60,50" Spacing="10">
                <TextBlock Text="{Binding StatusText}" 
                           FontSize="12" 
                           Foreground="#94A3B8" 
                           HorizontalAlignment="Center"/>
                           
                <!-- Progress Bar Container -->
                <Grid Height="4">
                    <!-- Track -->
                    <Border Background="#1E293B" CornerRadius="2"/>
                    
                    <!-- Styled Progress Bar -->
                    <ProgressBar Value="{Binding Progress}" Maximum="100" Height="4" 
                                 Background="Transparent" Foreground="#3b82f6" 
                                 BorderThickness="0" CornerRadius="2"
                                 ShowProgressText="False">
                        <ProgressBar.Effect>
                            <DropShadowEffect Color="#3b82f6" BlurRadius="8" Opacity="0.6"/>
                        </ProgressBar.Effect>
                    </ProgressBar>
                </Grid>
                 <TextBlock Text="{Binding Progress, StringFormat='{}{0}%'}" 
                           FontSize="10" 
                           Foreground="#64748B" 
                           HorizontalAlignment="Center"
                           IsVisible="False"/> <!-- Hidden per design -->
            </StackPanel>
        </Grid>
    </Border>
</Window>
