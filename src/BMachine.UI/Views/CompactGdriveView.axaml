<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BMachine.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="BMachine.UI.Views.CompactGdriveView"
             x:DataType="vm:GdriveViewModel">

    <UserControl.Resources>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- 0. Header (Window Mode Only) -->
        <Grid Grid.Row="0" Height="40" Background="Transparent" 
              IsVisible="{Binding IsWindowMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
              PointerPressed="OnHeaderPointerPressed">
            <TextBlock Text="Google Drive" VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="14" 
                       Foreground="{DynamicResource TextPrimaryBrush}" IsHitTestVisible="False"/>
            
            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Click="OnCloseWindow"
                    Background="Transparent" BorderThickness="0" Padding="8" CornerRadius="4" ToolTip.Tip="Close">
                <PathIcon Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                          Width="10" Height="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
            </Button>
        </Grid>
        <!-- Main Content Area -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="20" Padding="0" ClipToBounds="True"
                BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1">
            
            <Grid>
                <!-- VIEW 1: MAIN CONTENT (Visible when Settings are CLOSED) -->
                <Grid IsVisible="{Binding !IsSettingsOpen}" DragDrop.AllowDrop="True" Background="Transparent">
                    <!-- Empty State (Drop Zone - Visual Only) -->
                    <Grid IsVisible="{Binding !HasFiles}">
                        <Border Margin="20" Background="Transparent" CornerRadius="16" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="0">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
                                 <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="24"
                                         HorizontalAlignment="Center" Width="80" Height="64">
                                     <!-- Cloud Upload Icon -->
                                     <PathIcon Data="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z" 
                                               Width="32" Height="32" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                 </Border>
                                <TextBlock Text="Drop Files to Upload (GDrive)" FontSize="15" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- File List (Compact) -->
                    <ListBox x:Name="FileListBox" IsVisible="{Binding HasFiles}" ItemsSource="{Binding Files}" Background="Transparent" 
                             SelectionMode="Multiple"
                             Margin="10" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Styles>
                            <!-- Transparent Item Container -->
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <ControlTemplate>
                                        <ContentPresenter Background="{TemplateBinding Background}"
                                                          BorderBrush="{TemplateBinding BorderBrush}"
                                                          BorderThickness="{TemplateBinding BorderThickness}"
                                                          CornerRadius="{TemplateBinding CornerRadius}"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                                          Content="{TemplateBinding Content}"
                                                          Padding="{TemplateBinding Padding}"
                                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" />
                                    </ControlTemplate>
                                </Setter>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,8" CornerRadius="6" Background="{DynamicResource CardBackgroundBrush}"
                                        BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1"
                                        Margin="0,0,0,4"
                                        Cursor="Hand"
                                        PointerPressed="OnFileItemPointerPressed">
                                    <Grid ColumnDefinitions="Auto, *, Auto">
                                        <!-- 1. Checkbox -->
                                        <CheckBox IsChecked="{Binding IsSelected}" IsHitTestVisible="False" 
                                                  VerticalAlignment="Center" Margin="0,0,10,0" MinHeight="0" Padding="0"/>
                                        
                                        <!-- 2. Left: Name & Progress Bar -->
                                        <Grid Grid.Column="1" RowDefinitions="Auto, Auto" VerticalAlignment="Center">
                                            <!-- Name (Bold) -->
                                            <TextBlock Text="{Binding DisplayPath}" FontWeight="Bold" FontSize="13" 
                                                       Foreground="{DynamicResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,4"/>
                                            
                                            <!-- Progress Bar (Blue Line) -->
                                            <ProgressBar Grid.Row="1" Height="3" HorizontalAlignment="Stretch"
                                                         Foreground="{DynamicResource AccentBlueBrush}" Background="Transparent" BorderThickness="0"
                                                         Value="{Binding Progress}" Maximum="100" 
                                                         IsVisible="{Binding IsProcessing}"/>
                                                         
                                            <!-- Error Message -->
                                            <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" FontSize="10" FontWeight="Bold" Foreground="#EF4444" 
                                                       IsVisible="{Binding IsFailed}" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                        
                                        <!-- 3. Right: Size & Status -->
                                        <StackPanel Grid.Column="2" Margin="15,0,8,0" VerticalAlignment="Center" HorizontalAlignment="Right">
                                            <!-- Size -->
                                            <TextBlock Text="{Binding FileSizeDisplay}" FontSize="11" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                                       VerticalAlignment="Center" TextTrimming="None" TextWrapping="NoWrap"
                                                       HorizontalAlignment="Right"/>
                                            
                                            <!-- Status "Selesai" -->
                                             <TextBlock Text="Selesai" FontSize="10" FontWeight="SemiBold" 
                                                        Foreground="{DynamicResource AccentBlueBrush}" 
                                                        HorizontalAlignment="Right"
                                                        Margin="0,2,0,0"
                                                        IsVisible="{Binding IsDone}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <!-- VIEW 2: SETTINGS (Visible when Settings OPEN) -->
                 <Grid IsVisible="{Binding IsSettingsOpen}" Background="{DynamicResource CardBackgroundBrush}">
                    <Grid RowDefinitions="Auto, *" Margin="20">
                        <TextBlock Text="GDrive Settings" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Grid.Row="0" Margin="0,0,0,20"/>
                        
                        <!-- ScrollViewer Wrapper -->
                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="20" Margin="0,0,10,0"> <!-- Right Margin for Scrollbar -->
                                 
                                 <!-- Login Section -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Google Account" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="15">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="{Binding UserEmail}" VerticalAlignment="Center" FontWeight="Medium" FontSize="14"/>
                                                <TextBlock Text="Status: Connected" FontSize="12" Foreground="#4ade80" IsVisible="{Binding IsLoggedIn}"/>
                                                <TextBlock Text="Status: Not Connected" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" IsVisible="{Binding !IsLoggedIn}"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="1" Command="{Binding LoginCommand}" Content="Login" IsVisible="{Binding !IsLoggedIn}" Classes="accent"/>
                                            <Button Grid.Column="1" Command="{Binding LogoutCommand}" Content="Logout" IsVisible="{Binding IsLoggedIn}" Background="#EF4444" Foreground="White" CornerRadius="6"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
    
                                 <!-- Configs -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Target Folder ID" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBox Text="{Binding DriveFolderId}" Watermark="Paste Folder ID here (e.g. 1A2b3C...)" Height="40" VerticalContentAlignment="Center"/>
                                    <TextBlock Text="Files will be uploaded to this Google Drive folder." FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                                
                                <!-- Base Local Folder (Config) -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Base Local Folder" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <Grid ColumnDefinitions="*, Auto, Auto" Margin="0,0,0,0">
                                        <TextBox Text="{Binding BaseFolderPath}" IsReadOnly="True" Watermark="Auto (or select folder)" Margin="0,0,10,0" Height="40" VerticalContentAlignment="Center" Grid.Column="0"/>
                                        <Button Grid.Column="1" Command="{Binding SelectBaseFolderCommand}" Content="..." Margin="0,0,10,0" Height="40" Width="40" HorizontalContentAlignment="Center"/>
                                        <Button Grid.Column="2" Command="{Binding ClearBaseFolderCommand}" Content="X" Height="40" Width="40" HorizontalContentAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Text="Optional: Set root folder for uploads." FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
    
                                <Button Command="{Binding SaveSettingsCommand}" Content="Save &amp; Close" 
                                        HorizontalAlignment="Right" Classes="accent" Margin="0,20,0,20" Width="120"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                    
                    <!-- Close Button (Top Right) -->
                    <Button Command="{Binding SaveSettingsCommand}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Background="Transparent" BorderThickness="0" Padding="8">
                        <PathIcon Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" Width="16" Height="16" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer / Controls -->
        <Border Grid.Row="2" Margin="0,10,0,0" Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="12" Padding="15,8.5" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1,1,1,0">
            <Grid ColumnDefinitions="Auto, *, Auto">
                
                <!-- Left: Utils -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                     <!-- Login Status Indicator (Transparent) -->
                      <Border Background="Transparent" CornerRadius="4" Padding="8,4" ToolTip.Tip="{Binding UserEmail}" VerticalAlignment="Center">
                          <Panel Width="6" Height="6">
                              <Border CornerRadius="3" Background="#4ade80" IsVisible="{Binding IsLoggedIn}"/>
                              <Border CornerRadius="3" Background="#ef4444" IsVisible="{Binding !IsLoggedIn}"/>
                          </Panel>
                      </Border>
                      
                      <Button Command="{Binding ShowSettingsCommand}" ToolTip.Tip="Settings" 
                              Background="Transparent" BorderThickness="0" Padding="0"
                              Height="32" Width="32" CornerRadius="4">
                          <!-- IconSettings (Gear) -->
                          <PathIcon Data="{StaticResource IconSettings}" 
                                    Width="16" Height="16" Foreground="{DynamicResource TextSecondaryBrush}"/>
                      </Button>

                      <!-- Open Separate Window -->
                      <Button Command="{Binding OpenSeparateWindowCommand}" 
                              IsVisible="{Binding !IsWindowMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              ToolTip.Tip="Open in New Window" 
                              Background="Transparent" BorderThickness="0" Padding="0"
                              Height="32" Width="32" CornerRadius="4">
                          <PathIcon Data="{StaticResource IconOpenWindow}" 
                                    Width="16" Height="16" Foreground="{DynamicResource TextSecondaryBrush}"/>
                      </Button>
                </StackPanel>

                <!-- Right: Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    
                    <!-- Clear Button (Moved Here) -->
                     <Button Command="{Binding ClearCommand}" ToolTip.Tip="Clear All" Background="Transparent" BorderThickness="0" Padding="4">
                         <PathIcon Data="M3 6h18 M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2 M10 11v6 M14 11v6" Width="14" Height="14" Foreground="#EF4444"/>
                     </Button>

                    <!-- Upload -->
                    <Button Command="{Binding StartUploadCommand}" IsVisible="{Binding !IsProcessing}"
                            Background="{DynamicResource AccentBlueBrush}" Foreground="White" CornerRadius="8" Padding="15,8" BorderThickness="0">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <PathIcon Data="M9 16h6v-6h4l-7-7-7 7h4zm-4 2h14v2H5z" Width="14" Height="14"/>
                            <TextBlock Text="Upload" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                     <!-- Pause -->
                     <Button Command="{Binding PauseCommand}" IsVisible="{Binding IsProcessing}"
                            Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource TextSecondaryBrush}" BorderThickness="1"
                            Foreground="{DynamicResource TextPrimaryBrush}" CornerRadius="8" Padding="15,8">
                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                            <PathIcon Data="M6 4h4v16H6z M14 4h4v16h-4z" Width="12" Height="12" IsVisible="{Binding !IsPaused}"/>
                            <PathIcon Data="M5 3 L19 12 L5 21 L5 3 Z" Width="12" Height="12" IsVisible="{Binding IsPaused}"/>
                            
                            <TextBlock Text="JEDA" FontWeight="Bold" VerticalAlignment="Center" IsVisible="{Binding !IsPaused}"/>
                            <TextBlock Text="LANJUTKAN" FontWeight="Bold" VerticalAlignment="Center" IsVisible="{Binding IsPaused}"/>
                        </StackPanel>
                    </Button>
                    
                     <Button Command="{Binding StopCommand}" IsVisible="{Binding IsProcessing}"
                            Background="#EF4444" Foreground="White" CornerRadius="8" Padding="15,8" BorderThickness="0">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <PathIcon Data="M3 3h18v18H3z" Width="12" Height="12"/>
                            <TextBlock Text="STOP" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
