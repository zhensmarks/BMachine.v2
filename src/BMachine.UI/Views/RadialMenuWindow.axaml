<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BMachine.UI.ViewModels"
        xmlns:models="using:BMachine.UI.Models"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="BMachine.UI.Views.RadialMenuWindow"
        x:DataType="vm:RadialMenuViewModel"
        x:Name="RadialRoot"
        Width="200" Height="200"
        WindowStartupLocation="Manual"
        SystemDecorations="None"
        ShowInTaskbar="False"
        Topmost="True"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        CanResize="False"
        Title="RadialMenu">

    <Window.Styles>
        <Style Selector="Button.MenuButton">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="ClipToBounds" Value="False"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Foreground" Value="#DDFFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Border Name="PART_Bg"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Background="#33FFFFFF" 
                                BorderBrush="#20FFFFFF"
                                BorderThickness="1">
                            <Border.Transitions>
                                <Transitions>
                                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                                </Transitions>
                            </Border.Transitions>
                        </Border>
                        
                        <ContentPresenter Name="PART_Content"
                                          Content="{TemplateBinding Content}"
                                          HorizontalContentAlignment="Center"
                                          VerticalContentAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <Style Selector="Button.MenuButton:pointerover /template/ Border#PART_Bg">
             <Setter Property="Background" Value="#55FFFFFF"/>
             <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button.MenuButton.highlighted /template/ Border#PART_Bg">
             <Setter Property="Background" Value="{DynamicResource AccentBlueBrush}"/>
             <Setter Property="BorderBrush" Value="White"/>
        </Style>
    </Window.Styles>

    <Border Background="Transparent">
        <Grid>
             <!-- THE PLATE (Background Circle - Compact) -->
             <Border Width="160" Height="160" CornerRadius="80"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     Background="#E6151515"
                     BorderBrush="#30FFFFFF" BorderThickness="1"
                     BoxShadow="0 8 30 0 #60000000">
                 <!-- Optional: Inner ring or decorative element -->
                 <Border Width="100" Height="100" CornerRadius="50" 
                         BorderBrush="#10FFFFFF" BorderThickness="1"
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
             </Border>

             <!-- Center Anchor / Cancel Zone -->
             <Border Width="50" Height="50" CornerRadius="25" Background="#151515" 
                     BorderBrush="#30FFFFFF" BorderThickness="1"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     BoxShadow="0 2 10 0 #40000000">
                 <TextBlock Text="{Binding CenterText}" 
                            Foreground="{DynamicResource AccentBlueBrush}" 
                            FontWeight="Bold" FontSize="9"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            TextAlignment="Center" TextWrapping="Wrap"/>
             </Border>

             <ItemsControl ItemsSource="{Binding ActionItems}" ClipToBounds="False">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Width="200" Height="200" ClipToBounds="False"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Styles>
                    <Style Selector="ItemsControl > ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                    </Style>
                </ItemsControl.Styles>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:RadialMenuItem">
                        <!-- Lock Grid size to Button size -->
                        <Grid Width="32" Height="32" ClipToBounds="False">
                            <Button Classes="MenuButton" ToolTip.Tip="{Binding FullName}" 
                                    Classes.highlighted="{Binding IsHighlighted}"
                                    Command="{Binding DataContext.ExecuteScript, ElementName=RadialRoot}" 
                                    CommandParameter="{Binding ScriptPath}">
                                <Grid>
                                    <!-- Icon -->
                                    <Viewbox Width="16" Height="16" IsVisible="{Binding Icon, Converter={x:Static ObjectConverters.IsNotNull}}">
                                         <Path Data="{Binding Icon}" Fill="White" Stretch="Uniform"/>
                                    </Viewbox>
                                    
                                    <!-- Fallback Text (Smaller) -->
                                    <TextBlock Text="{Binding ShortName}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8"
                                               IsVisible="{Binding Icon, Converter={x:Static ObjectConverters.IsNull}}"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>
