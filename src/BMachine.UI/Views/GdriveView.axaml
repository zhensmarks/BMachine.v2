<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BMachine.UI.ViewModels"
             mc:Ignorable="d"
             x:Class="BMachine.UI.Views.GdriveView"
             x:DataType="vm:GdriveViewModel"
             Background="#000000">

    <Grid RowDefinitions="*, Auto">
        

        <!-- Content -->
        <Grid Grid.Row="0" Background="#000000" DragDrop.AllowDrop="True">
            
            <!-- Floating Controls (Overlay) -->
            <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,15,15,0" ZIndex="10">
                 <!-- Log Toggle -->
                <ToggleButton Command="{Binding ToggleLogCommand}" 
                              IsChecked="{Binding ShowLogPanel, Mode=TwoWay}"
                              Background="Transparent" BorderThickness="1" BorderBrush="#555"
                              CornerRadius="6" Padding="10" FontSize="14">
                    <Path Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,19H5V5H19V19M7,7H17V9H7V7M7,11H17V13H7V11M7,15H14V17H7V15Z" 
                          Width="16" Height="16" Stretch="Uniform" Fill="White"/>
                </ToggleButton>

                <!-- Settings Button -->
                <Button Command="{Binding ShowSettingsCommand}"
                        Background="Transparent" BorderThickness="1" BorderBrush="#555"
                        CornerRadius="6" Padding="10" FontSize="14">
                    <PathIcon Data="{StaticResource IconSettings}" Width="16" Height="16"/>
                </Button>
            </StackPanel>
            
            <!-- Empty State -->
            <Grid Grid.Column="0" IsVisible="{Binding !HasFiles}" DragDrop.AllowDrop="True" Margin="0,80,0,0">
                <Border Background="#111" CornerRadius="16" Margin="40" BorderBrush="#333" BorderThickness="2">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                        <PathIcon Data="{StaticResource IconUploadCloud}" Width="64" Height="64" HorizontalAlignment="Center" Opacity="0.5" Foreground="#666"/>
                        <TextBlock Text="Drag &amp; Drop File atau Folder" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Hanya .jpg, .jpeg, .png, .txt yang diterima" FontSize="12" 
                                   Foreground="#888" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- File List -->
            <ScrollViewer IsVisible="{Binding HasFiles}" VerticalScrollBarVisibility="Auto" Margin="0,80,0,0">
                <ItemsControl ItemsSource="{Binding Files}" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1A1A1A" CornerRadius="10" Padding="14" Margin="0,6" 
                                    BorderBrush="#2A2A2A" BorderThickness="1">
                                <Grid ColumnDefinitions="*, Auto, Auto, Auto">
                                    
                                    <!-- File Info -->
                                    <StackPanel Grid.Column="0" Spacing="6">
                                        <TextBlock Text="{Binding DisplayPath}" FontWeight="SemiBold" 
                                                   Foreground="White" FontSize="13" 
                                                   TextWrapping="Wrap" MaxLines="3" TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- Progress Bar -->
                                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Progress}" 
                                                     Height="6" CornerRadius="3">
                                            <ProgressBar.Foreground>
                                                <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                                    <GradientStop Color="#66D1FF" Offset="0"/>
                                                    <GradientStop Color="#2BB8FF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </ProgressBar.Foreground>
                                        </ProgressBar>
                                        
                                        <!-- File Size (when not failed) -->
                                        <TextBlock Text="{Binding FileSizeDisplay}" FontSize="11" 
                                                   Foreground="#888" IsVisible="{Binding !IsFailed}"/>
                                        
                                        <!-- Error Message (when failed) -->
                                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF5555" FontSize="11" 
                                                   IsVisible="{Binding IsFailed}" TextWrapping="Wrap" MaxWidth="300"/>
                                    </StackPanel>
                                    
                                    <!-- Status Badge -->
                                    <Border Grid.Column="1" CornerRadius="6" Padding="12,6" Background="#22000000" 
                                            Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="Medium" 
                                                   HorizontalAlignment="Center" Foreground="#888"/>
                                    </Border>
                                    
                                    <!-- Retry Button -->
                                    <Button Grid.Column="2" 
                                            Command="{Binding DataContext.RetryFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"
                                            Foreground="{DynamicResource AccentBlueBrush}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="10,0,0,0" Padding="8" FontSize="16">
                                        <PathIcon Data="{StaticResource IconRefresh}" Width="16" Height="16"/>
                                    </Button>

                                    <!-- Remove Button -->
                                    <Button Grid.Column="3" 
                                            Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"
                                            Foreground="#FF5555"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="8,0,0,0" Padding="8" FontSize="16">
                                        <PathIcon Data="{StaticResource IconTrash}" Width="16" Height="16"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Log Side Panel -->
            <Grid IsVisible="{Binding ShowLogPanel}" HorizontalAlignment="Right" Width="300" Background="#111">
                <Border BorderBrush="#333" BorderThickness="1,0,0,0">
                    <Grid RowDefinitions="Auto, *">
                        <TextBlock Text="Log Proses" FontWeight="SemiBold" Margin="10" Grid.Row="0"/>
                        <TextBox Grid.Row="1" Text="{Binding LogOutput}" IsReadOnly="True" 
                                 FontFamily="Consolas" FontSize="11" 
                                 BorderThickness="0" Background="Transparent" 
                                 TextWrapping="Wrap" Margin="5"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer Actions -->
        <Border Grid.Row="2" Padding="18" BorderBrush="#333" BorderThickness="0,1,0,0" Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
            <DockPanel LastChildFill="False">
                <!-- Left Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="12" DockPanel.Dock="Left">
                     <Button Command="{Binding ClearCommand}" 
                             Theme="{DynamicResource OutlinedButtonTheme}" 
                             BorderBrush="#553333" Foreground="#FF5555"
                             Padding="14,8" CornerRadius="6">
                         <StackPanel Orientation="Horizontal" Spacing="6">
                             <PathIcon Data="{StaticResource IconTrash}" Width="14" Height="14"/>
                             <TextBlock Text="BERSIHKAN"/>
                         </StackPanel>
                     </Button>
                     <ToggleButton IsChecked="{Binding ShowLogPanel}" 
                                   Padding="14,8" CornerRadius="6">
                         <StackPanel Orientation="Horizontal" Spacing="6">
                             <PathIcon Data="{StaticResource IconList}" Width="14" Height="14"/>
                             <TextBlock Text="LOG"/>
                         </StackPanel>
                     </ToggleButton>
                </StackPanel>

                <!-- Right Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="12" DockPanel.Dock="Right">
                    <Button Content="STOP" Command="{Binding StopCommand}" 
                            IsVisible="{Binding IsProcessing}"
                            Foreground="#FF5555" Background="Transparent" BorderThickness="1" BorderBrush="#553333"
                            Padding="16,10" CornerRadius="6" FontWeight="SemiBold"/>
                    
                    <Button Content="MULAI UPLOAD" Command="{Binding StartUploadCommand}" 
                            IsVisible="{Binding !IsProcessing}"
                            Padding="16,10" CornerRadius="6" FontWeight="SemiBold">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                <GradientStop Color="#2B7BE9" Offset="0"/>
                                <GradientStop Color="#1B6CE0" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>
        
        <!-- Completion Notification Overlay -->
        <Grid Grid.RowSpan="3" IsVisible="{Binding ShowCompletionDialog}" Background="#88000000">
            <Border Background="#1E1E1E" BorderBrush="#333" BorderThickness="1" CornerRadius="12" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30" MinWidth="300"
                    BoxShadow="0 4 20 0 #000000">
                <StackPanel Spacing="20">
                    <TextBlock Text="UPLOAD BERES" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" />
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="{StaticResource IconCheck}" Width="16" Height="16" Foreground="#4ade80"/>
                            <TextBlock Text="{Binding CompletionSuccessCount, StringFormat='Berhasil: {0}'}" FontSize="16" Foreground="#4CC2FF"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="{StaticResource IconX}" Width="16" Height="16" Foreground="#ef4444"/>
                            <TextBlock Text="{Binding CompletionFailureCount, StringFormat='Gagal: {0}'}" FontSize="16" Foreground="#FF5555"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button Content="OK" Command="{Binding CloseCompletionDialogCommand}" 
                            HorizontalAlignment="Center" Width="100" HorizontalContentAlignment="Center"
                            Padding="10" CornerRadius="6" Background="{DynamicResource AccentBlueBrush}" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Settings Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" IsVisible="{Binding IsSettingsOpen}">
            <Border Background="#AA000000" PointerPressed="SettingsOverlay_PointerPressed"/>
            <Border Background="#1A1A1A" CornerRadius="16" Padding="24" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="400"
                    BorderBrush="#333" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Pengaturan Google Drive" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="Status Login:" FontSize="12" Foreground="#888"/>
                        <TextBlock Text="{Binding UserEmail}" FontWeight="SemiBold" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                            <Button Content="Login" Command="{Binding LoginCommand}" IsVisible="{Binding !IsLoggedIn}"
                                    Padding="12,6" CornerRadius="6" Background="{DynamicResource AccentBlueBrush}"/>
                            <Button Content="Logout" Command="{Binding LogoutCommand}" IsVisible="{Binding IsLoggedIn}"
                                    Padding="12,6" CornerRadius="6" Background="#443333" Foreground="#FF5555"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Separator Background="#333"/>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="ID Folder Google Drive:" FontSize="12" Foreground="#888"/>
                        <TextBox Text="{Binding DriveFolderId}" Watermark="Paste ID folder tujuan di sini..." 
                                 Padding="10" CornerRadius="6"/>
                        <TextBlock Text="Bisa didapat dari URL folder: drive.google.com/drive/folders/[ID_FOLDER]" 
                                   FontSize="10" Foreground="#555" TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="Base Folder (untuk relative path):" FontSize="12" Foreground="#888"/>
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <TextBox Grid.Column="0" Text="{Binding BaseFolderPath}" IsReadOnly="True"
                                     Watermark="Opsional: folder dasar lokal..." 
                                     Padding="10" CornerRadius="6"/>
                            <Button Grid.Column="1" Command="{Binding SelectBaseFolderCommand}"
                                    Padding="10" CornerRadius="6" ToolTip.Tip="Browse Folder" Margin="8,0,0,0">
                                <PathIcon Data="{StaticResource IconFolder}" Width="14" Height="14"/>
                            </Button>
                            <Button Grid.Column="2" Command="{Binding ClearBaseFolderCommand}"
                                    Padding="10" CornerRadius="6" Foreground="#FF5555" ToolTip.Tip="Clear Path" Margin="8,0,0,0">
                                <PathIcon Data="{StaticResource IconTrash}" Width="14" Height="14"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                    
                    <Button Content="Simpan" Command="{Binding SaveSettingsCommandCommand}" 
                            HorizontalAlignment="Right" Padding="16,8" CornerRadius="6" 
                            Background="{DynamicResource AccentBlueBrush}" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
